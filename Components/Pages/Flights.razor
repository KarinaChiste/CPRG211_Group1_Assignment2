@page "/flights"

<div class="text-center">
	<h5>Flight Finder</h5>
</div>

<form class="d-flex gap-4">
	<div class="form-group flex-grow-1">
		<label for="from">From:</label>
		<input type="text" class="form-control" placeholder="Any">
	</div>
	<div class="form-group flex-grow-1">
		<label for="to">To:</label>
		<input type="text" class="form-control" placeholder="Any">
	</div>
	<div class="form-group flex-grow-1">
		<label for="day">Day:</label>
		<input type="text" class="form-control" placeholder="Any">
	</div>
	<div class="align-self-end flex-grow-1" style="width: 190px;">
		<button type="button" class="btn btn-primary w-100" @* @onclick="FindReservation" *@

		style="white-space: nowrap;">Find flights</button>
	</div>
</form>

<div class="text-center mt-4">
	<h5>Flights</h5>
</div>
<div class="form-group flex-grow-1">

	<select class="form-control">
@* 		@foreach (var item in reservations)
		{
			<option value="@item">@item</option>
		} *@
	</select>
</div>

